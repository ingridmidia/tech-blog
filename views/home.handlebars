{{#each posts as |post|}}
<div class="row">
    <div class="card col-11 mx-auto m-4 my-card">
        <div class="card-header">
            <h5>{{post.title}}</h5>
            <h9>Posted by {{post.user.username}} on {{post.createdAt}}</h9>
        </div>
        <div class="card-body">
            <p class="card-text">{{post.content}}</p>
            {{!-- <a href="#" class="btn btn-outline-dark btn-sm">Add a comment</a> --}}
        </div>
    </div>
</div>
{{/each}}